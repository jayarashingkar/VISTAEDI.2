@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Parser</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrapValidator.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container clearfix">
            <img src="~/Images/uaclogo.jpg" style="height: auto;width: 350px;" />
            @*<div style="float:right;text-align:center;text-decoration:underline">
                    <a href="http://webserver/NewIntraNet/HomePage">Back to Intranet</a>
                </div>*@

        </div>
    </header><!-- /header -->
    <div class="container">
        <div class="row" style="margin-top:20px">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <fieldset>
                    <img src="~/Images/heading.PNG" />

                    @using (Html.BeginForm("Upload", "Parser", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @*<label>Choose file:</label>*@ 
                        @*<input type="file" name="file" />*@<br />

                        <div class="row">
                            <div class="col-md-6">                               
                                <input type="file" id="file" name="file" class="hidden" />
                                <input type="text" id="filePathChoose" name="filePathChoose" class="form-control" placeholder='Choose a file...' />
                            </div>
                            <div class="col-md-6">
                                <button class="btn btn-info btn-choose" id="Choose" name="Choose" type="button">Choose</button>
                            </div>
                        </div>

                        <div style="color:red">
                            <label for="" name="lblMessage" id="lblMessage" class="cols-sm-2 control-label">@Html.Raw(ViewBag.Message)</label>
                        </div>
                        <div>
                        <div style="color:blue">
                            <label for="" class="cols-sm-2 control-label">@ViewBag.Status</label>
                        </div>
                            <div class="dropdown">
                                <div class="col-md-6">
                                    @*<label for="" class="cols-sm-2 control-label">Status</label>*@
                                    <label for="status" control-label">Status</label>
                                    <select name="status" id="status" class="form-control">
                                        <i class="btn btn-default " aria-hidden="true"></i>
                                        <option value="1">Default</option>
                                        <option value="3">Accept on Deviation</option>
                                        <option value="0">Reject on Deviation</option>
                                    </select>
                                </div>
                            </div>
                        <div class="row">                              
                            <div class="col-md-6">
                                @*<button type="submit" value="Upload" class="save" id="btUpload" name="btUpload"><i class="fa fa-upload" aria-hidden="true">Upload</button>*@   
                                <button type="submit" value="Upload" class="btn btn-success" id="btUpload" name="btUpload"><i class="fa fa-upload" aria-hidden="true"></i>Upload</button>
                            </div>
                        </div>                                                    
                        </div>
                    }
                </fieldset>
            </div>
        </div>
    </div>
</body>
</html>

<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/bootbox.min.js"></script>
@*<script src="~/Scripts/rnd.scripts.js"></script>
<script src="~/Scripts/rnd.login.js"></script>*@
<script src="~/Scripts/bootstrapValidator.min.js"></script>
<script src="~/Scripts/Utilities.js"></script>

<script>
    $(document).ready(function () {      

     //   $('#status').attr('data-live-search', 'true');
    //    $('#status').selectpicker();

        $("#Choose").click(function () {
            $('#lblMessage').text('');
            $("#file").click();
            $("#filePathChoose").val($("#file").val());
         
        });

        $("#Reset").click(function () {
            $("#filePathChoose").val("");
        });        
    });
</script>